{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "NodeNext",
		"outDir": "dist",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"]
}
